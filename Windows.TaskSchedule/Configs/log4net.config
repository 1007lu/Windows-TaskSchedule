<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="ColorConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="White" />
        <backColor value="Red, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别：  %-5level %n类：%logger  %n描述：%message%newline %n"/>
      </layout>
    </appender>
    <appender name="SystemLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name= "File" value= "E:\WindowService\OrderService\Logs\ServiceRun.log"/>
      <param name= "AppendToFile" value= "true"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别：  %-5level %n类：%logger  %n描述：%message%newline %n" />
      </layout>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <LoggerToMatch value="Topshelf.Error" />
		<LoggerToMatch value="Topshelf.Hosts.StopHost" />
		<LoggerToMatch value="Topshelf.Hosts.StartHost" />      
      </filter>     
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="ColorConsoleAppender"/>
      <appender-ref ref="SystemLogFileAppender"/>
    </root>
  </log4net>
</configuration>